{{tags}}


{%- set relatedPosts = collections.all | filterByTags(tags) | excludeFromCollection(page.url) -%}
{% if relatedPosts.length %}
<aside>
  <h1 data-tags="{{ tags | join(',') }}">Related people</h1>
  <ul>
    {%- for post in relatedPosts -%}
    <li><a href="{{ post.url }}" data-tags="{{ post.data.tags | join(',') }}">{{ post.data.name }}</a></li>
    {%- endfor -%}
  </ul>
</aside>
{% endif %}